{% extends 'base.html.twig' %}

{% block title 'Inscription' %}
{% block body %}
    <h1>Inscription</h1>
    <p>Inscrivez-vous au site pour pouvoir publier une annonce.</p>

    {# {{ form(form) }} #}

    {{form_start(form)}}

        <div class="grid-2-cols">
        
            <div class="form-group pdr10">
                {{form_row(form.first_name,{
                    'label':'Votre nom',
                    'attr':{
                        'class':'form-control'
                    }
                })}}
            </div>
            <div class="form-group">
                {{form_row(form.last_name,{
                    'label':'Votre pr√©nom',
                    'attr':{
                        'class':'form-control'
                    }
                })}}
            </div>

            <div class="form-group pdr10">
                {{form_row(form.email,{
                    'label':'Votre email',
                    'attr':{
                        'class':'form-control'
                    }
                })}}
            </div>

            <div class="form-group">
                {{form_row(form.password,{
                    'label':'Votre mot de passe',
                    'attr':{
                        'class':'form-control'
                    }
                })}}
            </div>

        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary">S'incrire</button>
        </div>

    {{form_end(form)}}

{% endblock %}