{% extends 'base.html.twig' %}

{% block title %}
    Ajout d'une annonce
{% endblock %}

{% block body %}
    <h1>Ajout d'une annonce</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.title,{
                'attr':{'class':'form-control'},
                'label':'Titre de l\'annonce'
            }) }}
        </div>

        <div class="form-group">
        {{form_row(form.description,{
            'attr':{'class':'form-control'},
            'label':'description'
        })}}
        </div>

        <div class="form-group">
            {{ form_row(form.price,{
                'attr':{'class':'form-control'},
                'label':'Prix'
            }) }}
        </div>

        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}


{% block bottom %}
    <div class="text-center">
        <a href={{path('annonce')}} class="btn btn-warning">Retour</a>
    </div>
{% endblock %}